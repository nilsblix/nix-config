{ lib, ... }: {
    programs.fish = {
        enable = true;
        interactiveShellInit = lib.strings.concatStrings (lib.strings.intersperse "\n" ([
            "function fish_prompt"
            "   echo (set_color white)'fish->'$USER@(set_color cf1f22)$hostname(set_color white):(set_color blue)(prompt_pwd)(set_color yellow)'$ '"
            "end"

            # "function fish_user_key_bindings"
            # "   fish_default_key_bindings"
            # "   bind \cc 'commandline -r  \"\"; commandline -f repaint'"
            # "end"
            "function fish_user_key_bindings"
               "bind \cc 'echo; commandline | cat; commandline ""; commandline -f repaint'"
                "echo hello"
            "end"

            "set -U fish_greeting"
            "set -U theme_color_scheme dracula"
        ]));
        shellAliases = {
            drs = "darwin-rebuild switch --flake";
            vim = "nvim";
            l = "ls -al";
        };
    };
}
